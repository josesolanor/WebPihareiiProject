@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebPihare</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/dx.common.css">
        <link rel="stylesheet" href="~/css/dx.light.compact.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/dx.common.css">
        <link rel="stylesheet" href="~/css/dx.light.compact.css">
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">WebPihare</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    @{
                        <li><a asp-area="" asp-controller="Departments" asp-action="Index">Departamentos</a></li>
                        if (User.IsInRole("Admin"))
                        {
                            <li><a asp-area="" asp-controller="Clients" asp-action="Index">Clientes</a></li>
                            <li><a asp-area="" asp-controller="Commisioners" asp-action="Index">Comisionistas</a></li>
                            <li><a asp-area="" asp-controller="Visitregistrations" asp-action="Index">Visitas</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configuraciones<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a asp-area="" asp-controller="Departmenttypes" asp-action="Index">Tipo Departamento</a></li>
                                    <li><a asp-area="" asp-controller="Departmentstates" asp-action="Index">Estado Departamento</a></li>
                                    <li><a asp-area="" asp-controller="Roles" asp-action="Index">Roles</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li><a asp-area="" asp-controller="Clients" asp-action="MyClients">Mis Clientes</a></li>
                            <li><a asp-area="" asp-controller="Visitregistrations" asp-action="MyVisits">Mis Visitas</a></li>
                        }
                    }
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Login" asp-action="Logout" method="post">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a asp-controller="Commisioners" asp-action="MyProfile">Hola @User.FindFirst("FullName").Value</a>
                            </li>
                            <li>
                                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                            </li>
                        </ul>
                    </form>
                }
            </div>
        </div>
    </nav>

    @*<partial name="_CookieConsentPartial" />*@

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.5/jszip.min.js"></script>
        <script src="~/js/dx.all.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.5/jszip.min.js"></script>
        <script src="~/js/dx.all.js"></script>
    </environment>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - WebPihare</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
